<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>Nyron Williams</Authors>
    <Description>A lightweight library for functional programming abstractions, including Result, Maybe, Either, Specification, and more.</Description>
    <PackageId>Wrapture</PackageId>
    <PackageProjectUrl>https://github.com/NyronW/Wrapture</PackageProjectUrl>
    <RepositoryUrl>https://github.com/NyronW/Wrapture</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>C#; .NET; Functional Programming; Result; Maybe; Either; Specification; Core</PackageTags>
    <Version>1.1.1</Version>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryBranch>main</RepositoryBranch>
    <RepositoryCommit>HEAD</RepositoryCommit>
  </PropertyGroup>


  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
    <None Update="LICENSE.txt" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
